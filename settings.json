{
    //настройка шрифта
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 22,
    "editor.fontWeight": "400",

    //табуляция
    "editor.tabSize": 4,
    "editor.detectIndentation": false,

    "editor.folding": false,
    "editor.smoothScrolling": true,
    "editor.hminimap.enabled": false,
    // "editor.detectIndention": "first",
    "editor.suggestSelection": "first",
    "editor.multiCursorModifier": "ctrlCmd",

    //Настройка переноса слов
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "same",
    "editor.wordWrapColumn": 120,
    // "breadcrumbs.icons": false,
    // "breadcrumbs.showKeys": false,
    // "breadcrumbs.showFiles": false,
    // "breadcrumbs.symbolPath": "off",
    // "breadcrumbs.showArrays": false,
    // "breadcrumbs.showEvents": false,
    // "breadcrumbs.showFields": false,
    // "breadcrumbs.showClasses": false,
    // "breadcrumbs.showMethods": false,
    // "breadcrumbs.showBooleans": false,
    // "breadcrumbs.showFunctions": false,
    // "breadcrumbs.showConstants": false,
    // "breadcrumbs.showEnumMembers": false,
    // "breadcrumbs.showConstructors": false,

    //связанные редактирования тегов
    "editor.linkedEditing": true,

    //автоматическое закрытие тегов
    "html.autoClosingTags": true,
    "javascript.autoClosingTags": true,
    "typescript.autoClosingTags": true,

    //отображение символов
    "editor.renderControlCharacters": false,

    //подсветка неоднозначных символов
    "editor.unicodeHighlight.ambiguousCharacters": false,

    // быстрые подсказки
    // "editor.quickSuggestionsDelay": 0,
    // "html.completion.attributeDefaultValue": "singlequotes",

    //миникарта и обозначение отступов вертикальными полосками
    "editor.minimap.enabled": false,
    "editor.guides.indentation": false,

    //подсказка, лампочка
    "editor.lightbulb.enabled": "off",
    "editor.hover.enabled": false,

    //внешний вид
    "editor.bracketPairColorization.enabled": false,
    "editor.glyphMargin": false,

    // скролл бар горизонтальный и вертикальный , плюс всякие декоративные полоски
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.hideCursorInOverviewRuler": false,
    "editor.overviewRulerBorder": false,

    //настройка курсора
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": "explicit",

    "workbench.productIconTheme": "el-vsc-v1-icons",
    "window.density.editorTabHeight": "compact",
    "editor.accessibilitySupport": "off",
    "symbols.hidesExplorerArrows": false,

    "workbench.iconTheme": "quill-icons",
    "workbench.colorTheme": "Darcula",
    // "workbench.activityBar.location": "hidden",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.editor.empty.hint": "hidden",
    "window.openFilesInNewWindow": "off",

    
    // "terminal.integrated.fontFamily": "Liga",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.cursorStyle": "line",

    // настройки обозревателя (проводника)
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.tree.indent": 24,
    "workbench.tree.renderIndentGuides":"none",
    "workbench.startupEditor": "newUntitledFile",
    "git.decorations.enabled": false,

    //настройка отладки
    "debug.toolBarLocation": "hidden",
    "debug.showInlineBreakpointCandidates": false,
    "debug.showBreakpointsInOverviewRuler": false,
    "debug.focusWindowOnBreak": false,

    "emmet.includeLanguages": {
        "blade": "html",
        "javascript": "javascriptreact"
    },
    "emmet.triggerExpansionOnTab": true,

    //настройки prettier
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    //наверное более правильно прописать все эти настройки в файле конфигурации проекта .prettierrc.json
    // "prettier.semi": true,
    // "prettier.singleQuote": true,
    // "prettier.bracketSpacing": true,
    // "prettier.trailingComma": "all",
    // "prettier.tabWidth": 4,
    // "prettier.arrowParens": "avoid",
    // "prettier.endOfLine": "lf",
    "editor.formatOnSave": true,

    // сортирует импорты в алфавитном порядке
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },

    "editor.inlineSuggest.enabled": true,

    //пустая строка в конце файла, после сохранения
    "files.insertFinalNewline": true,

    //автосохранение после потери фокуса
    "files.autoSave": "onFocusChange",

    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.stickyScroll.scrollWithEditor": false,
    "workbench.tree.enableStickyScroll": false,
    "editor.stickyScroll.enabled": false,

    //настройки расширения орфографии в коде
    "cSpell.language": "en,ru",

    //настройки пробелов
    "files.trimTrailingWhitespaceInRegexAndStrings": false,
    "editor.experimentalWhitespaceRendering": "off",
    "editor.renderWhitespace": "all",

    //кастомные цвета областей
    "window.titleBarStyle": "native",
    "workbench.colorCustomizations": {
        "editor.background": "#242424",
        "list.inactiveSelectionBackground": "#333333",

        "sideBar.background": "#1a1a1a",
        "sideBar.border": "#1f1f1f",

        "scrollbarSlider.activeBackground": "#262626",
        "scrollbarSlider.hoverBackground": "#333333",

        "statusBar.background": "#2c2c2c",

        "tab.inactiveBackground": "#2c2c2c",
        "editorGroupHeader.tabsBackground": "#2c2c2c",
        "tab.activeBackground": "#262626",
        "tab.activeBorder": "#262626",
        "tab.unfocusedActiveBorder": "#000000",

        // "breadcrumb.background": "#2c2c2c",

        "editorLineNumber.foreground": "#404040",
        "editorWhitespace.foreground": "#404040",
        "editorGutter.background": "#242424",
    },

    //кастомная подсветка синтаксиса
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "entity.name.type.class",
                    "keyword",
                    "constant",
                    "storage.modifier",
                    "storage.type.class.js"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "invalid",
                    "keyword.operator",
                    "constant.numeric.css",
                    "keyword.other.unit.px.css",
                    "constant.numeric.decimal.js",
                    "constant.numeric.json"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },


    "svg.preview.transparencyGrid": true,
    "svg.preview.boundingBox": true,

    "javascript.updateImportsOnFileMove.enabled": "never",
    "vue.server.hybridMode": "typeScriptPluginOnly",

    //Расширений, встроенный переводчик
    "vscodeGoogleTranslate.preferredLanguage": "English",
    "prettier.requireConfig": true,
    "window.commandCenter": false,
    "workbench.navigationControl.enabled": false,
    "workbench.layoutControl.enabled": false,
    "breadcrumbs.enabled": false,
    "explorer.compactFolders": false,
    "explorer.fileNesting.enabled": true,

    "eslint.format.enable": true,



    //подсказки
    // Управляет отображением быстрых подсказок во время ввода текста.
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },

     // Управляет тем, следует ли принимать предложения для символов фиксации. Например, в JavaScript точка с запятой (`;`) может быть символом фиксации, который принимает предложение и печатает этот символ.
    "editor.acceptSuggestionOnCommitCharacter": true,


    // Управляет задержкой в ​​мс, после которой будут отображаться быстрые предложения.
    "editor.quickSuggestionsDelay": 10,

    // Управляет тем, будет ли нажатие клавиши Tab вставлять лучшее предложение или будет ли Tab циклически перебирать другие предложения
    "editor.tabCompletion": "off",

    // Включить подсказки параметров
    "editor.parameterHints.enabled": true,

}
